{
   "name": "Redmine Issues Checker",
   "description": "Keep track of Redmine issues assigned to you.",
   "version": "0.70",
   "manifest_version": 2,
   "permissions": [ "tabs", "notifications", "<all_urls>" ],
   "icons": {
      "128": "img/redmine_logo_128.png"
   },
   "background": {
      "page": "background.html"
   },
   "browser_action": {
      "default_title": "Redmine Issues Checker"
   },
   "options_page": "fancy-settings/source/index.html",
   "content_security_policy": "script-src 'self' https://apis.google.com https://platform.twitter.com https://www.facebook.com; object-src 'self'"
}
